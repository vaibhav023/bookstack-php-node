{
    "name": "ssddanbrown/htmldiff",
    "description": "HTML Content Diff Generator",
	"homepage": "https://github.com/ssddanbrown/htmldiff",
	"license": "MIT",
	"type": "library",
	"authors": [
        {
            "name": "Dan Brown",
            "email": "ssddanbrown@googlemail.com",
			"role": "Developer"
        }
    ],
    "require": {
		"php": ">=7.2",
		"ext-mbstring": "*"
	},
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.5.9",
        "vimeo/psalm": "^4.10"
    },
	"autoload": {
		"psr-4": {
			"Ssddanbrown\\HtmlDiff\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Ssddanbrown\\HtmlDiff\\Tests\\": "tests"
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test-coverage": "vendor/bin/phpunit --coverage-html coverage"
	}
}
